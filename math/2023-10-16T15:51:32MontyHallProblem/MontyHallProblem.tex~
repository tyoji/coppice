%              0 & (\sigma_{0},\sigma_{1},\sigma_{2})=(1,1,-1)\\
%              -2 & (\sigma_{0},\sigma_{1},\sigma_{2})=(1,-1,1)\\
%              0 & (\sigma_{0},\sigma_{1},\sigma_{2})=(1,-1,-1)\\
%              0 & (\sigma_{0},\sigma_{1},\sigma_{2})=(-1,1,1)\\
%              -2 & (\sigma_{0},\sigma_{1},\sigma_{2})=(-1,1,-1)\\
%              0 & (\sigma_{0},\sigma_{1},\sigma_{2})=(-1,-1,1)\\
%              2 & (\sigma_{0},\sigma_{1},\sigma_{2})=(-1,-1,-1)\\
%             \end{cases}
%            \end{equation}
%
%            \begin{equation}
%             Z^{(\mathrm{open})}_{3}
%              = 2\left( \exp\left[ 2K \right] + 2
%              + \exp\left[ -2K \right] \right)
%              = 2 \left( \exp\left[ K \right] + \exp\left[ -K \right]\right)^{2}
%            \end{equation}
%
%
%            \begin{equation}
